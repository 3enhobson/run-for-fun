<h2 class="d-flex justify-content-center">Login or &nbsp<a href="#signup"> Sign Up </a>&nbsp Below!</h2>


<form class="d-flex align-items-center justify-content-center">
  <div class="container align-items-center justify-content-center col-6 m-5 p-5 bg-dark text-light rounded">
    <h3>Login</h3>

    <div class="form-outline mb-4 pt-3">
      <input type="email" id="email-login" class="form-control" />
      <label class="form-label">Email address</label>
    </div>

    <div class="form-outline mb-4">
      <input type="password" id="password-login" class="form-control" />
      <label class="form-label">Password</label>
    </div>

    <button type="submit" class="btn btn-primary btn-block mb-4">Login</button>
  </div>
</form>

<div class="text-center">
  <h2>Not a member?</h2>
  <h3><a href="#signup">
  Sign up</a>&nbsp Now!</h3>
</div>

<form id="signup" class="form signup-form container m-5 p-5 bg-dark text-light rounded">
  <h3>Sign Up</h3>

  <div class="form-outline pt-3 mb-4">
    <input type="text" id="username-signup" class="form-control" />
    <label class="form-label">Username</label>
  </div>


  <div class="form-outline mb-4">
    <input type="email" id="email-signup" class="form-control" />
    <label class="form-label">Email address</label>
  </div>

  <div class="form-outline mb-4">
    <input type="password" id="password-signup" class="form-control" />
    <label class="form-label">Password</label>
  </div>

  <button type="submit" class="btn btn-primary btn-block mb-4">Submit</button>


</form>


<script src="js/login.js"></script>